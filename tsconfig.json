{
    "compilerOptions": {
      "target": "es2021",
      "jsx": "react-jsx",
      "allowJs": true,
      "checkJs": false,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "module": "esnext",
      "esModuleInterop": true,
      "outDir": "./dist",
      "noEmit": false,
      "lib": ["dom", "es2021"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx", 
      "custom.d.ts"    
    ],
    "exclude": [
      "node_modules",
      "src/**/*.js"
    ],
}